# === 1. Target ===
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# === 2. PVE 虚拟机驱动 ===
CONFIG_PACKAGE_kmod-virtio=y
CONFIG_PACKAGE_kmod-virtio-net=y
CONFIG_PACKAGE_kmod-virtio-pci=y
CONFIG_PACKAGE_ethtool=y

# === 3. iStore & Docker 依赖 ===
CONFIG_PACKAGE_script-utils=y
CONFIG_PACKAGE_mount-utils=y
CONFIG_PACKAGE_coreutils-stty=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_libuci-lua=y
CONFIG_PACKAGE_linksys-awrt-mvebu-u-boot-env=n
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_tar=y

# === 4. Nikki & HomeProxy 核心依赖 ===
CONFIG_PACKAGE_yq=y
CONFIG_PACKAGE_kmod-inet-diag=y
CONFIG_PACKAGE_kmod-netlink-diag=y
CONFIG_PACKAGE_kmod-nft-socket=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_ucode-mod-digest=y

# === 5. 流量监控 nlbwmon ===
CONFIG_PACKAGE_kmod-nf-conntrack-netlink=y
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_nlbwmon=y

# === 6. 基础工具 ===
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_jq=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-base64=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_unzip=y

# === 7. Luci 界面 ===
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_libustream-mbedtls=n
CONFIG_PACKAGE_libustream-openssl=y
